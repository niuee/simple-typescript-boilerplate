{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationDir": "types",
      "lib": ["es6", "dom"],
      "typeRoots": ["node_modules/@types"],
      "noEmitOnError": true,
      "noImplicitAny": true
    },
    "include": ["src/**/*", "tests/index.test.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
  }
  